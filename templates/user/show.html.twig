{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<h1>Salarié Wacdo</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Identifiant</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>

			<tr>
				<th>Nom</th>
				<td>{{ user.nom }}</td>
			</tr>
			<tr>
				<th>Prenom</th>
				<td>{{ user.prenom }}</td>
			</tr>
			<tr>
				<th>Date_embauche</th>
				<td>{{ user.dateEmbauche ? user.dateEmbauche|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Administrateur</th>
				<td>{{ user.administrateur ? 'Yes' : 'No' }}</td>
			</tr>
		</tbody>
	</table>
	<div class="salut">
		<a href="{{ path('app_user_index') }}" class="smallButton">revenir à la liste</a>

		<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="smallButton">editer</a>

		{{ include('user/_delete_form.html.twig') }}

	</div>
{% endblock %}
